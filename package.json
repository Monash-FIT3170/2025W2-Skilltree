{
  "name": "SkillTree",
  "private": true,
  "scripts": {
    "setup": "meteor npm install && node -e \"require('fs').writeFileSync('settings.json', JSON.stringify({ public: { enableSSR: true }, private: { AWSAccessKeyId: '', AWSSecretAccessKey: '', google:{clientId:'',secret:'' }, smtp: { username: 'your-gmail@gmail.com', password:'App-Password', server: 'smtp.gmail.com', port: 465 } } }, null, 2))\" && meteor npm run postinstall",
    "start": "flowbite-react register && meteor run --settings settings.json",
    "test": "meteor test --settings settings.json --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --settings settings.json --full-app --driver-package meteortesting:mocha",
    "test-start": "TEST_SERVER=0 TEST_CLIENT=0 meteor test --settings settings.json --once --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --settings settings.json --extra-packages bundle-visualizer",
    "lint": "eslint --no-warn-ignored client/ imports/ server/",
    "lint:fix": "eslint --fix --no-warn-ignored client/ imports/ server/",
    "format": "prettier --write client/ imports/ server/",
    "postinstall": "flowbite-react patch && flowbite-react register"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.882.0",
    "@babel/runtime": "^7.28.3",
    "@emotion/is-prop-valid": "^1.4.0",
    "@react-icons/all-files": "^4.1.0",
    "@react-oauth/google": "^0.12.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@xyflow/react": "^12.8.4",
    "buffer": "^6.0.3",
    "chai": "^5.3.3",
    "flowbite-react": "^0.11.9",
    "framer-motion": "^12.23.12",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "meteor-node-stubs": "^1.2.24",
    "node-gyp-build": "^4.8.4",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.30.1",
    "react-spinners": "^0.17.0",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.7",
    "use-immer": "^0.11.0"
  },
  "meteor": {
    "modern": true,
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2"
  }
}
